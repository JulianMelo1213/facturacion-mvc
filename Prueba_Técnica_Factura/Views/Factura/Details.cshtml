@model Prueba_Técnica_Factura.Models.Factura

@{
    ViewData["Title"] = "Detalle de Factura";
}

<h2>Detalle de Factura #@Model.FacturaID</h2>

<div class="mb-3">
    <strong>Cliente:</strong> @Model.Cliente?.Nombre<br />
    <strong>Cédula/RNC:</strong> @Model.Cliente?.CedulaRnc<br />
    <strong>Tipo Documento:</strong> @Model.Cliente?.TipoDocumento
</div>

<div>
    <strong>Fecha:</strong> @Model.Fecha.ToString("dd/MM/yyyy")
</div>

<hr />

<h4>Detalles</h4>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Producto</th>
            <th>Cantidad</th>
            <th>Precio</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Detalles)
        {
            <tr>
                <td>@item.Producto?.Nombre</td>
                <td>@item.Cantidad</td>
                <td>$@item.PrecioUnitario.ToString("F2")</td>
                <td>$@item.Total.ToString("F2")</td>
            </tr>
        }
    </tbody>
</table>

<p class="text-end"><strong>Total Factura: $@Model.Total.ToString("F2")</strong></p>

<a asp-action="Index" class="btn btn-secondary">Volver</a>
