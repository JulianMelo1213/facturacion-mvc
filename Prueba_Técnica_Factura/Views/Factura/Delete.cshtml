@model Prueba_Técnica_Factura.Models.Factura

@{
    ViewData["Title"] = "Eliminar Factura";
}

<h2>Eliminar Factura</h2>

<h4>¿Estás seguro que deseas eliminar la factura #@Model.FacturaID?</h4>

<div class="mb-3">
    <strong>Cliente:</strong> @Model.Cliente?.Nombre<br />
    <strong>Cédula/RNC:</strong> @Model.Cliente?.CedulaRnc<br />
    <strong>Fecha:</strong> @Model.Fecha.ToString("dd/MM/yyyy")
</div>

<h5>Detalles de Factura</h5>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Producto</th>
            <th>Cantidad</th>
            <th>Precio Unitario</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var d in Model.Detalles)
        {
            <tr>
                <td>@d.Producto?.Nombre</td>
                <td>@d.Cantidad</td>
                <td>$@d.PrecioUnitario.ToString("F2")</td>
                <td>$@d.Total.ToString("F2")</td>
            </tr>
        }
    </tbody>
</table>

<p class="text-end"><strong>Total Factura: $@Model.Total.ToString("F2")</strong></p>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="FacturaID" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
